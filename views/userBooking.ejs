<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Booking</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #e9ecef; /* Light grey background */
            font-family: 'Arial', sans-serif; /* Clean, professional font */
        }
       .booking-container {
            padding: 30px;
            background-color: #ffffff; /* White container for contrast */
            box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Subtle shadow for depth */
            border-radius: 8px; /* Rounded corners for modern look */
        }
        h1 {
            color: #343a40; /* Darker text for headings */
        }
       .booking-form {
            margin-top: 25px;
        }
       .booking-form label {
            display: block;
            margin-top: 12px;
            color: #495057; /* Slightly lighter text for labels */
        }
       .booking-form input[type="date"], 
       .booking-form input[type="time"], 
       .booking-form input[type="checkbox"],
       .booking-form select {
            width: 100%;
            padding: 12px;
            margin-top: 6px;
            border-radius: 5px;
            border: 1px solid #ced4da; /* Softer border color */
            background-color: #fff; /* Background color for inputs */
        }
       .booking-form button[type="submit"] {
            background-color: #007bff;
            color: white;
            cursor: pointer;
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            margin-top: 12px;
            font-weight: bold; /* Make the button text bolder */
        }
       .booking-form button[type="submit"]:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>

<div class="container booking-container">
    <div class="d-flex justify-content-between align-items-center pb-3">
        <h1 class="text-center mb-4">Book Your Appointment</h1>
        <a href="/user/dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
    <form class="booking-form" action="/user/book" method="post">
        <!-- Pet Selection -->
        <div class="form-group">
            <label for="pets">Select Pet</label>
            <select class="form-control" id="pet" name="pet" required>
                <option value="" selected disabled>Select Pet</option>
                <% pets.forEach(pet => { %>
                    <option value="<%= pet.petName %>"><%= pet.petName %></option>
                <% }) %>
            </select>
        </div>
        
        <!-- Doctor Selection -->
        <div class="form-group">
            <label for="doctorsList">Select Doctor</label>
            <select class="form-control" id="doctor" name="doctor" required>
                <option value="" selected disabled>Select Doctor</option>
                <% doctors.forEach(doctor => { %>
                    <option value="<%= doctor.username %>">Dr.<%= doctor.username %> (<%= doctor.experience %> years)</option>
                <% }) %>
            </select>
        </div>
        
        <!-- Other Form Fields Remain Unchanged -->
        <div class="form-group">
            <label for="date">Date</label>
            <input type="date" class="form-control" id="date" name="date" required>
        </div>
        <div class="form-group">
            <label for="timeSlot">Select Time Slot</label>
            <select class="form-control" id="timeSlot" name="timeSlot" required>
                <option value="" selected disabled>Select Time Slot</option>
                <option value="09:00-10:00">09:00 - 10:00</option>
                <option value="10:00-11:00">10:00 - 11:00</option>
                <option value="11:00-12:00">11:00 - 12:00</option>
                <option value="12:00-13:00">12:00 - 13:00</option>
            </select>
        </div>
        <div class="form-group">
            <label for="purpose">Purpose</label>
            <input type="text" class="form-control" id="purpose" name="category" required>
        </div>
        <button type="submit" class="btn btn-primary">Book Now</button>
    </form>
</div>
</body>
</html>
